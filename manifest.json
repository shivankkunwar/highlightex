{
    "manifest_version": 3,
    "name": "Highlight Saver",
    "version": "1.0",
    "permissions": ["storage", "activeTab"],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "run_at": "document_idle"
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Highlight Saver"
    }
}